{
    "compilerOptions": {
      "target": "es2015",
      "module": "CommonJS",
      "rootDir": "src",
      "outDir": "dist",
      "moduleResolution": "node",
      "checkJs": true,
      "removeComments": true,
      "noEmitOnError": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipDefaultLibCheck": true,
      "skipLibCheck": true
    },
    "include": ["src"]
  }